{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src", "types"],
  "skipLibCheck": true
}
